						text="{a>/buttonText}" ariaHasPopup="Dialog" tooltip="주문하기" >
						<customData>
							<m:BadgeCustomData 
								key="badge"
								value="{= ${json>/}.value}  {a>/clickCount}"
								visible="true"
							>
							</m:BadgeCustomData>
						</customData>						  
					</ObjectPageHeaderActionButton>
				</actions>
			</ObjectPageDynamicHeaderTitle>
			
		</headerTitle>
		
