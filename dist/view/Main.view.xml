						</m:Column>
                        <m:Column hAlign="Center">
							<m:Text id = "a2" text="Batch" />
						</m:Column >
                        <m:Column hAlign="Center" width="200px">
							<m:Text text="SKU명" />
						</m:Column>
						<m:Column hAlign="Center">
